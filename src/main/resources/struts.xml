<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
    
    <constant name="struts.objectFactory" value="spring" />

    <constant name="struts.devMode" value="true" />
    
	<constant name="struts.enable.SlashesInActionNames" value="true"/>
	<constant name="struts.mapper.alwaysSelectFullNamespace" value="false"/>
	<constant name="struts.patternMatcher" value="regex" />

    <package name="org.mmpp.impruth" namespace="/" extends="struts-default">
		<global-results>
			<result name="dataFile" type="stream">
				<param name="contentType">contentType</param>
				<param name="inputName">dataStream</param>
				<param name="contentDisposition">attachment;filename="%{fileName}"</param>
				<param name="bufferSize">1024</param>
			</result>
		</global-results>
		<action name="/{isbn:\d+}/detail" >
			<result type="chain">
				<param name="actionName">detail</param>
			</result>
		</action>
		
		<action name="delete" class="spDeletePageAction" >
			<result type="redirectAction">list</result>
		</action>
		<action name="new" class="spNewPageAction" >
			<result name="input" >/WEB-INF/pages/new.jsp</result>
			<result type="redirectAction">
				<param name="actionName">detail</param>
				<param name="id">%{currentId}</param>
			</result>
		</action>

		<action name="hope" class="spHopePageAction" >
			<result name="hope_add">/WEB-INF/pages/hope_new.jsp</result>
			<result name="hope">/WEB-INF/pages/hope.jsp</result>
			<result name="shelf_list" type="redirectAction">shelf</result>
			<result >/WEB-INF/pages/hope.jsp</result>
		</action>

		<action name="shelf" class="org.mmpp.impruth.action.ShelfPageAction" >
			<result name="hope_list" type="redirectAction">hope</result>
			<result >/WEB-INF/pages/shelf/list.jsp</result>
		</action>

		<action name="detail" class="detailPageAction" >
			<result >/WEB-INF/pages/detail.jsp</result>
		</action>

	</package>
	
	<package name="json"  extends="json-default">
     <action name="scanBarcode" class="scanBarcodeJsonAction" >
        <result type="json"/>
     </action>
     <action name="book" class="bookJsonAction" >
        <result type="json"/>
     </action>
  </package>
  
    <package name="org.mmpp.simplelogin" namespace="/" extends="struts-default">
    	<action name="login" class="loginPageAction" >
    		<result name="input">/WEB-INF/pages/login.jsp</result>
			<result type="redirectAction">ownList</result>
		</action>
    </package>
    <package name="org.mmpp.impruth.secure" namespace="/" extends="struts-default">
    	<interceptors >
    		<interceptor name="authorticationInrceptor" class="org.mmpp.impruth.interceptor.AuthenticationInterceptor" />
    		<interceptor-stack name="defaultStack" >
	    		<interceptor-ref name="authorticationInrceptor" />
	    		<interceptor-ref name="defaultStack" />
    		</interceptor-stack>
    	</interceptors>
    	<default-interceptor-ref name="defaultStack" />
    	<global-results>
    		<result name="login" type="redirectAction">login</result>
    	</global-results>
    	<action name="ownList" class="spOwnListPageAction" >
			<result name="input">/WEB-INF/pages/own_shelf/input.jsp</result>
			<result name="imagelist">/WEB-INF/pages/own_shelf/imagelist.jsp</result>
			<result >/WEB-INF/pages/own_shelf/list.jsp</result>
		</action>
    	
	 </package>
    	
</struts>

